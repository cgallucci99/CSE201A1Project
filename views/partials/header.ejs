<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <a class="navbar-brand" href="/">BookBot</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="form-inline mx-auto my-lg-0 mb-1" action="/api/search" method="POST">
                <div class="input-group my-1">
                        <div class="form-group">
                            <input class="form-control" type="text" name="search" placeholder="Search" required>
                        </div>
                        <div class="form-group input-group-append">
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
                </div>
            </form>
            <% if (!user) { %> 
            <a href="/login">
                <button class="btn btn-default mr-3"  id="login">
                    Login
                </button>
            </a>
            <a href="/signup">
                <button class="btn btn-default float-right" id="signup">
                    Sign Up
                </button>
            </a>
            <% } else { %>
            <a href="/mycatalogue">
                <button class="btn btn-default mr-3" id="mycatalogue">
                    My Catalogue
                </button>
            </a>    
            <a href="/api/logout">
                <button class="btn btn-default mr-3" id="logout">
                    Logout
                </button>
            </a>
            <% } %>
        </div>
    </nav>
    